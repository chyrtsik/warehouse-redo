<resources xmlns="http://artigile.by/xml/ns/resources"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://artigile.by/xml/ns/resources
    http://artigile.by/xml/ns/resources/resources_1_0.xsd"
  version="1.0">
    <!-- Database server on this host -->
    <server name="localhost" datasource-name="jdbc/Warehouse-local"/>
    <datasource name="jdbc/Warehouse-local" pool-name="warehousePool-local"/>
    <jdbc-resource-pool name="warehousePool-local">
        <property name="database.url" value="jdbc:mysql://localhost:3306/warehouse?characterEncoding=utf-8"/>
        <property name="database.driver" value="org.gjt.mm.mysql.Driver"/>
        <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
    </jdbc-resource-pool>
	
	<!-- Remote database server (replace {host_name} with your server's computer name or IP) -->
  <server name="aws" datasource-name="jdbc/Warehouse-1"/>
  <datasource name="jdbc/Warehouse-1" pool-name="warehousePool-1"/>
  <jdbc-resource-pool name="warehousePool-1">
    <property name="database.url" value="jdbc:mysql://warehouse.cwbuy4k8kwpj.us-east-1.rds.amazonaws.com:3306/whclient?characterEncoding=utf-8"/>
    <property name="database.driver" value="org.gjt.mm.mysql.Driver"/>
    <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
  </jdbc-resource-pool>
	

  <!-- Remote database server (replace {host_name} with your server's computer name or IP) -->
  <server name="server01" datasource-name="jdbc/Warehouse"/>
  <datasource name="jdbc/Warehouse" pool-name="warehousePool"/>
  <jdbc-resource-pool name="warehousePool">
    <property name="database.url" value="jdbc:mysql://server01:3306/whclient?characterEncoding=utf-8"/>
    <property name="database.driver" value="org.gjt.mm.mysql.Driver"/>
    <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
  </jdbc-resource-pool>
</resources>
